            input.access__input.access__input-text(type="text")(placeholder="Пароль")
        label.access__label
            input.access__input.access__input-text(type="text")(placeholder="Повторите пароль")
        label.access__label
            input.access__input.access__input-text(type="text")(placeholder="Номер карты (если есть)")
        label.access__label
            input.access__input.access__input-text(type="text")(placeholder="Код приглашения от друга")
